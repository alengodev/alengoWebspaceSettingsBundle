<?xml version="1.0" ?>
<form xmlns="http://schemas.sulu.io/template/template"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/form-1.0.xsd"
>
    <key>webspace_settings_details</key>

    <properties>
        <property name="title" type="text_line" mandatory="true">
            <meta>
                <title>sulu_admin.title</title>
            </meta>
            <params>
                <param name="headline" value="true"/>
            </params>
        </property>

        <property name="type" type="single_select" mandatory="true" colspan="4">
            <meta>
                <title>alengo_webspace_settings.type</title>
            </meta>
            <params>
                <param name="default_value" value="string"/>

                <param name="values" type="collection">
                    <param name="string">
                        <meta>
                            <title>String</title>
                        </meta>
                    </param>
                    <param name="stringLocale">
                        <meta>
                            <title>String localized</title>
                        </meta>
                    </param>
                    <!--<param name="media">
                        <meta>
                            <title>Media</title>
                        </meta>
                    </param>-->
                    <param name="medias">
                        <meta>
                            <title>Media</title>
                        </meta>
                    </param>
                    <param name="contacts">
                        <meta>
                            <title>Contact</title>
                        </meta>
                    </param>
                    <param name="organizations">
                        <meta>
                            <title>Organization</title>
                        </meta>
                    </param>
                    <param name="blocks">
                        <meta>
                            <title>Block</title>
                        </meta>
                    </param>
                    <param name="blocksLocale">
                        <meta>
                            <title>Block localized</title>
                        </meta>
                    </param>
                </param>
            </params>
        </property>

        <property name="typeKey" type="text_line" colspan="8">
            <meta>
                <title>alengo_webspace_settings.type_key</title>
                <info_text>alengo_webspace_settings.type_key_info</info_text>
            </meta>
        </property>

        <property name="dataString" type="text_line" visibleCondition="type == 'string' or type == 'stringLocale'">
            <meta>
                <title>String</title>
            </meta>
        </property>

        <!--<property name="dataMedia" type="single_media_selection" visibleCondition="type == 'media'">
            <meta>
                <title>Media</title>
            </meta>
        </property>-->

        <property name="dataMedias" type="media_selection" visibleCondition="type == 'medias'">
            <meta>
                <title>Media</title>
            </meta>
        </property>

        <property name="dataContacts" type="contact_selection" visibleCondition="type == 'contacts'">
            <meta>
                <title>Contact</title>
            </meta>
        </property>

        <property name="dataAccounts" type="account_selection" visibleCondition="type == 'organizations'">
            <meta>
                <title>Organization</title>
            </meta>
        </property>

        <block name="dataBlocks" default-type="editor_image" minOccurs="0" visibleCondition="type == 'blocks' or type == 'blocksLocale'">
            <meta>
                <title>Block</title>
            </meta>

            <types>
                <type name="quote">
                    <meta>
                        <title lang="en">Quote</title>
                        <title lang="de">Zitat</title>
                    </meta>

                    <properties>
                        <property name="images" type="single_media_selection">
                            <meta>
                                <title lang="de">Bild</title>
                                <title lang="en">Image</title>
                            </meta>

                            <tag name="sulu.block_preview" priority="512"/>
                        </property>

                        <property name="article" type="text_editor">
                            <meta>
                                <title lang="de">Artikel</title>
                                <title lang="en">Article</title>
                            </meta>

                            <tag name="sulu.block_preview" priority="1024"/>
                        </property>
                    </properties>
                </type>
                <type name="editor_image">
                    <meta>
                        <title lang="en">Editor with image</title>
                        <title lang="de">Editor mit Bild</title>
                    </meta>

                    <properties>
                        <property name="images" type="media_selection">
                            <meta>
                                <title lang="de">Bilder</title>
                                <title lang="en">Images</title>
                            </meta>

                            <tag name="sulu.block_preview" priority="512"/>
                        </property>

                        <property name="article" type="text_editor">
                            <meta>
                                <title lang="de">Artikel</title>
                                <title lang="en">Article</title>
                            </meta>

                            <tag name="sulu.block_preview" priority="1024"/>
                        </property>
                    </properties>
                </type>
            </types>
        </block>

        <property name="locale" type="custom_urls_locale_select" visibleCondition="type == 'stringLocale' or type == 'blocksLocale'">
            <meta>
                <title>sulu_custom_url.target_locale</title>
            </meta>
        </property>

        <property name="showOptions" type="checkbox">
            <params>
                <param name="type" value="toggler"/>
                <param name="label">
                    <meta>
                        <title>alengo_webspace_settings.show_options</title>
                    </meta>
                </param>
            </params>
        </property>

        <property name="description" type="text_area" visibleCondition="showOptions == true">
            <meta>
                <title>sulu_admin.description</title>
            </meta>
        </property>

        <property name="enabled" type="checkbox" colspan="4" visibleCondition="showOptions == true">
            <meta>
                <info_text>alengo_webspace_settings.enabled_info</info_text>
            </meta>
            <params>
                <param name="label">
                    <meta>
                        <title>alengo_webspace_settings.enabled</title>
                    </meta>
                </param>
                <param name="default_value" value="true"/>
                <param name="type" value="toggler" />
            </params>
        </property>
    </properties>
</form>