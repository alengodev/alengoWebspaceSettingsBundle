<?xml version="1.0" ?>
<form xmlns="http://schemas.sulu.io/template/template"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/form-1.0.xsd"
>
    <key>webspace_settings_details</key>

    <properties>
        <property name="title" type="text_line" mandatory="true">
            <meta>
                <title>sulu_admin.title</title>
            </meta>
            <params>
                <param name="headline" value="true"/>
            </params>
        </property>

        <property name="typeKey" type="text_line">
            <meta>
                <title>alengo_webspace_settings.type_key</title>
                <info_text>alengo_webspace_settings.type_key_info</info_text>
            </meta>
        </property>

        <property name="type" type="single_select" mandatory="true">
            <meta>
                <title>alengo_webspace_settings.type</title>
            </meta>
            <params>
                <param name="default_value" value="string"/>

                <param name="values" type="collection">
                    <param name="string">
                        <meta>
                            <title>String</title>
                        </meta>
                    </param>
                    <param name="stringLocale">
                        <meta>
                            <title>String localized</title>
                        </meta>
                    </param>
                    <!--<param name="media">
                        <meta>
                            <title>Media</title>
                        </meta>
                    </param>-->
                </param>
            </params>
        </property>

        <property name="dataString" type="text_line" mandatory="true" visibleCondition="type == 'string' or type == 'stringLocale'">
            <meta>
                <title>Value</title>
            </meta>
        </property>

        <!--<property name="dataMedia" type="single_media_selection" visibleCondition="type == 'media'">
            <meta>
                <title>Media</title>
            </meta>
        </property>-->
        
        <property name="description" type="text_area">
            <meta>
                <title>sulu_admin.description</title>
            </meta>
        </property>

        <property name="locale" type="custom_urls_locale_select" visibleCondition="type == 'stringLocale'">
            <meta>
                <title>sulu_custom_url.target_locale</title>
            </meta>
        </property>

        <property name="enabled" type="checkbox">
            <meta>
                <info_text>alengo_webspace_settings.enabled_info</info_text>
            </meta>
            <params>
                <param name="label">
                    <meta>
                        <title>sulu_admin.publish</title>
                    </meta>
                </param>
                <param name="default_value" value="true"/>
                <param name="type" value="toggler" />
            </params>
        </property>
    </properties>
</form>